!!! 5
%html
	%head
		%title
			= "Bringmethat"
		= stylesheet_link_tag   'application', media: 'all', 'data-turbolinks-track' => true
		= stylesheet_link_tag	'application', 'https://fonts.googleapis.com/css?family=Alegreya:400,900italic'
		= javascript_include_tag 'application', 'data-turbolinks-track' => true
		= csrf_meta_tags
	%body
		
		.site-wrapper
			.site-wrapper-inner
				.cover-container
					= render "shared/notice_and_alert"
					.masthead.clearfix
						.inner
							%h3.masthead-brand
								= "Bring Me That"
							%nav
								%ul.nav.masthead-nav
									%li.active 
										%a{:href => "#"}Home

				.inner.cover.main-center-cover
					= render "shared/home_page_cover_form"
					
					= yield


